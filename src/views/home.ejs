        <!--use forEach to get static list users-->
        <% listUsers.forEach(function(user, index) { %>
        <tr>
          <td><%= user.id %> - <%= index %></td>
          <td><%= user.email %></td>
          <td><%= user.name %></td>
          <td><%= user.city %></td>
          <td>
            <a href="/update" style="padding: 4px 10px">Edit</a>
            <a style="padding: 4px 10px">Delete</a>
          </td>
        </tr>
        <% }) %>
      </table>
    </div>
  </body>
</html>
